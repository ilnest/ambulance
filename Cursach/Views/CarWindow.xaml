<Window x:Class="Cursach.Views.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursach.Views"
        mc:Ignorable="d"
        Title="CarWindow" Height="420" Width="350">
    <StackPanel Background="YellowGreen">
        <Label Content="Car Information" FontSize="24" FontStyle="Italic" HorizontalAlignment="Center" Margin="0 20 0 0" Foreground="White" FontWeight="Bold" />
        <Label Content="Model" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Margin="70 70 0 0"/>
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="2" Height="40" Width="200" Margin="0 0 0 0" Background="LightGray">
            <TextBlock Name="modelBlock" FontSize="14" TextAlignment="Center" Foreground="Gray" FontWeight="Bold"/>
        </Border>

        <Label Content="Plate Number" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Margin="70 30 0 0"/>
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="2" Height="40" Width="200" Margin="0 0 0 0" Background="LightGray">
            <TextBlock Name="plateBlock" FontSize="14" TextAlignment="Center" Foreground="Gray" FontWeight="Bold"/>
        </Border>
    </StackPanel>
</Window>
